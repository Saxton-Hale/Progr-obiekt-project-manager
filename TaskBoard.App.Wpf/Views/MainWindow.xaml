<Window x:Class="TaskBoard.App.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TaskBoard.App.Wpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--lewy-->
        <Border Grid.Column="0"
            BorderBrush="Gray"
            BorderThickness="1"
            Padding="10">
            <DockPanel LastChildFill="True">

                <!--naglowek-->
                <TextBlock DockPanel.Dock="Top"
                   FontSize="18"
                   FontWeight="Bold"
                   Text="Boards"
                   Margin="0,0,0,10"/>

                <!--dodawanie tablicy-->
                <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
                    <TextBox Width="170"
                         Margin="0,0,8,0"
                         Text="{Binding NewBoardName, UpdateSourceTrigger=PropertyChanged}"
                         
                             />
                    <Button Content="Add"
                        Width="70"
                        Command="{Binding AddBoardCommand}"/>
                </StackPanel>

                <!--buttons-->
                <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right">
                    <Button Content="Delete"
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding DeleteBoardCommand}"/>
                    <Button Content="Save"
                    Width="80"
                    Command="{Binding SaveChangesCommand}"/>
                </StackPanel>

                <!--lista boardow-->
                <ListBox ItemsSource="{Binding Boards}"
                 SelectedItem="{Binding SelectedBoard}"
                 DisplayMemberPath="Name"
                 MinHeight="200"/>
            </DockPanel>
        </Border>

        <!--prawy-->
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="12">
            <Grid>
                <TextBlock Text="Select a board from the list"
                   Foreground="Gray"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedBoard}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <views:BoardView DataContext="{Binding BoardViewModel}" />
            </Grid>
        </Border>
    </Grid>
</Window>
